<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

  <mapper namespace ="org.zerock.wego.mapper.mypage.MyinfoMapper">
	 <update id="updateMyInfo">
	  		UPDATE tuser_tb
			SET address=#{address}, san_range=#{san_range}, san_taste=#{san_taste}
			WHERE user_id=#{user_id}
	 </update>
  
     <delete id="deleteMyAccount">
    	DELETE
    	FROM
    		tuser_tb
    	WHERE
    		user_id = #{user_id}
    </delete>
  
  </mapper>