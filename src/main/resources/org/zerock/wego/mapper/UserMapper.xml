<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.zerock.wego.mapper.UserMapper">

	<select id="selectByUserId"
		resultType="org.zerock.wego.domain.UserVO">

		SELECT
		*
		FROM
		user_tb
		WHERE
		user_id = #{userId}
	</select>

	<select id="selectBySocialId"
		resultType="org.zerock.wego.domain.UserVO">

		SELECT
		*
		FROM
		user_tb
		WHERE
		social_id = #{socialId}
	</select>

	<select id="selectByNickname"
		resultType="org.zerock.wego.domain.UserVO">

		SELECT
		*
		FROM
		user_tb
		WHERE
		nickname = #{nickname}
	</select>


	<insert id="insertUser">

		INSERT INTO user_tb(
		nickname, social_id)
		VALUES(
		#{nickname}, #{socialId})

	</insert>
</mapper>